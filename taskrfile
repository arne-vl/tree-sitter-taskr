env dev:
  file = test.env

task clear:
  run   = clear
  alias = c

task generate:
  desc  = generate parser
  run   = tree-sitter generate
  alias = g

task test:
  desc  = tests the parser using this taskrfile
  run   = tree-sitter parse taskrfile
  alias = t
  needs = c, g

task highlight:
  run   = tree-sitter highlight taskrfile
  alias = h
  needs = g

task build:
  run   = tree-sitter build
  alias = b
