task generate:
  desc = generate parser
  run  = ./node_modules/tree-sitter-cli/tree-sitter generate

task test:
  desc  = tests the parser
  run   = ./node_modules/tree-sitter-cli/tree-sitter parse taskrfile
  alias = t
  needs = generate

task highlight:
  run   = ./node_modules/tree-sitter-cli/tree-sitter highlight taskrfile
  alias = h
